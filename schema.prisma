datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// landing page contact form submissions
model ContactInquiry {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  email     String
  message   String
}

model Comment {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  author    String?
  content   String
  postSlug  String
}
